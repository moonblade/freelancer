<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="10" >

    <RelativeLayout
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="#44BCF1"
        android:layout_weight="1.3">

        <ImageView
            android:id="@+id/new_icon"
            android:layout_width="40dp"
            android:layout_height="30dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dp"
            android:background="@drawable/tlogo" />

        <TextView
            android:id="@+id/name_grp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="40dp"
            android:padding="5dp"
            android:layout_toLeftOf="@+id/ttle"
            android:text="Double Tick"
            android:textColor="#000"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/ttle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="5dp"
            android:layout_toLeftOf="@+id/ttle_icon"
            android:text="Active Chats"
            android:textColor="#000"
            android:textSize="18sp" />

        <ImageView
            android:id="@+id/ttle_icon"
            android:layout_width="40dp"
            android:layout_height="30dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="5dp"
            android:background="@drawable/option" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl1"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.5"
        android:gravity="center_vertical"
        android:visibility="gone" >

        <TextView
            android:id="@+id/top_txt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:textColor="#000"
            android:textSize="20sp"
            android:textStyle="bold"
            android:visibility="visible" />

        <AutoCompleteTextView
            android:id="@+id/top_txxxt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:hint="Enter Keyword to search"
            android:layout_toLeftOf="@+id/btn_serach"
            android:textColor="#fff"
            android:textSize="18sp"
            android:textStyle="bold" />

        <!-- <Button
            android:id="@+id/btn_serach"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:layout_toLeftOf="@+id/btn_addgroup"
            android:background="@drawable/search_btn" /> -->

        <!-- <Button
            android:id="@+id/btn_settings"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_alignBaseline="@+id/btn_serach"
            android:layout_alignBottom="@+id/btn_serach"
            android:layout_marginRight="16dp"
            android:layout_toLeftOf="@+id/btn_serach"
            android:background="@drawable/settings"
            android:gravity="center_vertical|center_horizontal" /> -->

       <!--  <ImageView
            android:id="@+id/btn_addgroup"
            android:layout_width="30dp"
            android:layout_height="25dp"
            android:layout_alignParentRight="true"
            android:layout_alignTop="@+id/btn_serach"
            android:src="@drawable/profile" /> -->
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/shotcut"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/top_txxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="Show all Groups"
            android:textColor="#fff"
            android:textSize="20sp"
            android:textStyle="bold"
            android:visibility="gone" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl2"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="8.7" >

        <TextView
            android:id="@+id/no_chatfound"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:gravity="center_vertical|center_horizontal"
            android:text="No Chat Found"
            android:textColor="#ff0000"
            android:textSize="30sp"
            android:textStyle="bold"
            android:visibility="gone" />

        <ListView
            android:id="@+id/listContact"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >
        </ListView>
    </RelativeLayout>

</LinearLayout>