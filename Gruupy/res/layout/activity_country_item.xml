<?xml version="1.0" encoding="utf-8"?>
<TableRow xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/commonBackground"
    android:id="@+id/tableRow1"
     
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">

    <ImageView
		android:id="@+id/countryIcon"
		android:src="@drawable/ic_launcher"
		style="@style/countryIcon"		
		/>
        
    <TextView
		android:id="@+id/countryName"
		style="@style/countryNameItem"
		/>
    
    <TextView
		android:id="@+id/countryDialingCode"
		style="@style/countryDialingCodeItem"		
		/>  
    
    <ImageView
		android:id="@+id/countrySelected"
		android:src="@drawable/btn_check_buttonless_off"
		style="@style/countryCheck"		
		/>
    
</TableRow>