<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/parent"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/view_videos"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <RelativeLayout
            android:id="@+id/c_det"
            android:layout_width="wrap_content"
            android:layout_height="54dp"
            android:gravity="center_vertical|center_horizontal" >

            <TextView
                android:id="@+id/chnl"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="1dp"
                android:layout_marginTop="6dp"
                android:layout_toRightOf="@+id/f_icon"
                android:gravity="center_horizontal|center_vertical"
                android:text="CHANNEL"
                android:textSize="18sp" />

            <ImageView
                android:id="@+id/f_icon"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentBottom="true"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="1dp"
                android:background="@android:color/transparent"
                android:paddingTop="9dp"
                android:src="@drawable/header_logo" />

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/chnl"
                android:layout_marginLeft="7dp"
                android:layout_toRightOf="@+id/f_icon"
                android:gravity="center_vertical|center_horizontal" >

                <TextView
                    android:id="@+id/chnl1"
                    android:layout_width="22dp"
                    android:layout_height="23.8dp"
                    android:background="#6D6E0F"
                    android:gravity="center_vertical|center_horizontal"
                    android:paddingBottom="2dp"
                    android:paddingLeft="2dp"
                    android:paddingRight="2dp"
                    android:text="8"
                    android:textAlignment="center"
                    android:textColor="#fff"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/chnl2"
                    android:layout_width="22dp"
                    android:layout_height="23.8dp"
                    android:layout_below="@+id/chnl"
                    android:layout_marginLeft="1dp"
                    android:layout_toRightOf="@+id/chnl1"
                    android:background="#2B170A"
                    android:gravity="center_vertical|center_horizontal"
                    android:paddingBottom="2dp"
                    android:paddingLeft="2dp"
                    android:paddingRight="2dp"
                    android:text="2"
                    android:textColor="#fff"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/chnl3"
                    android:layout_width="22dp"
                    android:layout_height="23.8dp"
                    android:layout_below="@+id/chnl"
                    android:layout_marginLeft="1dp"
                    android:layout_toRightOf="@+id/chnl2"
                    android:background="#855D35"
                    android:gravity="center_vertical|center_horizontal"
                    android:paddingBottom="2dp"
                    android:paddingLeft="2dp"
                    android:paddingRight="2dp"
                    android:text="7"
                    android:textColor="#fff"
                    android:textSize="18sp"
                    android:textStyle="bold" />
            </RelativeLayout>
        </RelativeLayout>

        <TextView
            android:id="@+id/view_uploaded_videos"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="7dp"
            android:layout_toRightOf="@+id/c_det"
            android:text="Durban Group"
            android:textSize="16sp" />

        <RelativeLayout
            android:id="@+id/new_lay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/view_uploaded_videos"
            android:layout_toRightOf="@+id/c_det" >

            <!--
                 <Spinner
                android:id="@+id/lesson_detail"
                android:layout_width="160dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="4dp" />
            -->

            <LinearLayout
                android:layout_width="0px"
                android:layout_height="0px"
                android:focusable="true"
                android:focusableInTouchMode="true" />

            <EditText
                android:id="@+id/s_topic"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/lesson_detail"
                android:layout_marginLeft="6dp"
                android:layout_toRightOf="@+id/lesson_detail"
                android:background="@android:color/transparent"
                android:hint="sub-topic"
                android:padding="2dp"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/live"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Live Session"
                android:visibility="gone" />
        </RelativeLayout>

        <ImageButton
            android:id="@+id/options_wheel"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="8dp"
            android:background="@drawable/option" />

        <ImageButton
            android:id="@+id/online"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_centerVertical="true"
            android:layout_marginRight="1dp"
            android:layout_marginTop="10dp"
            android:layout_toLeftOf="@+id/options_wheel"
            android:background="#00ffffff"
            android:src="@drawable/live"
            android:visibility="gone" />

        <ImageButton
            android:id="@+id/repeat_req"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="1dp"
            android:layout_marginTop="10dp"
            android:layout_toLeftOf="@+id/options_wheel"
            android:background="#00ffffff"
            android:src="@drawable/refresh"
            android:visibility="gone" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/topic_lay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="1dp"
        android:layout_marginTop="5dp" >

        <LinearLayout
            android:id="@+id/controls2"
            android:layout_width="match_parent"
            android:layout_height="52dp"
            android:layout_below="@+id/comments1"
            android:background="#fff"
            android:orientation="horizontal"
            android:visibility="gone"
            android:weightSum="5.0" >

            <RelativeLayout
                android:id="@+id/new_lay2sd"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1.6"
                android:background="@drawable/bgs" >

                <ImageView
                    android:id="@+id/new_bttn21"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_above="@+id/attch_text"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="1dp"
                    android:background="@android:color/transparent"
                    android:src="@drawable/back1_w" />

                <TextView
                    android:id="@+id/unlink_text"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/new_bttn21"
                    android:gravity="center"
                    android:paddingLeft="4dp"
                    android:text="Back To Tuition"
                    android:textAlignment="gravity"
                    android:textColor="#fff"
                    android:textSize="15sp" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.01"
                android:background="#432015" >

                <View
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="8dp"
                    android:layout_marginTop="8dp"
                    android:background="#ffffff" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/new_lay31"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1.6"
                android:background="@drawable/bgs" >

                <ImageButton
                    android:id="@+id/clear_bttn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="2dp"
                    android:background="@android:color/transparent"
                    android:padding="1dp"
                    android:src="@drawable/l2" />

                <TextView
                    android:id="@+id/listen_text"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_toRightOf="@+id/clear_bttn"
                    android:gravity="center"
                    android:paddingLeft="4dp"
                    android:text="Listen To Speech"
                    android:textColor="#fff"
                    android:textSize="15sp" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.01"
                android:background="#432015" >

                <View
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="8dp"
                    android:layout_marginTop="8dp"
                    android:background="#ffffff" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/new_lay52"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1.78"
                android:background="@drawable/bgs" >

                <ImageButton
                    android:id="@+id/post_note"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="3dp"
                    android:background="@android:color/transparent"
                    android:src="@drawable/s2" />

                <TextView
                    android:id="@+id/send_text"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_centerHorizontal="true"
                    android:layout_toRightOf="@+id/post_note"
                    android:gravity="center"
                    android:paddingLeft="4dp"
                    android:text="Send As Speech"
                    android:textColor="#fff"
                    android:textSize="15sp" />
            </RelativeLayout>
        </LinearLayout>
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/controls"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="#fff"
        android:gravity="center_horizontal"
        android:orientation="horizontal"
        android:weightSum="6.00" >

        <RelativeLayout
            android:id="@+id/new_lay"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginTop="3dp"
            android:layout_weight="1" >

            <ImageButton
                android:id="@+id/new_bttn"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="@drawable/bgs"
                android:src="@drawable/icos1" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/new_lay2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginTop="3dp"
            android:layout_weight="1"
            android:background="@drawable/bgs" >

            <ImageButton
                android:id="@+id/new_bttn2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@+id/text1"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="3dp"
                android:background="@android:color/transparent"
                android:src="@drawable/i1" />

            <TextView
                android:id="@+id/text1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:text="new"
                android:textColor="#fff"
                android:textSize="16sp" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/new_lay3"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginTop="3dp"
            android:layout_weight="1"
            android:background="@drawable/bgs" >

            <ImageButton
                android:id="@+id/clear_bttn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@+id/text2"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="3dp"
                android:background="@android:color/transparent"
                android:src="@drawable/i1" />

            <TextView
                android:id="@+id/text2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:text="clear"
                android:textColor="#fff"
                android:textSize="16sp" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/new_lay4"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginTop="3dp"
            android:layout_weight="1"
            android:background="@drawable/bgs" >

            <ImageButton
                android:id="@+id/linked_bttn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@+id/text3"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="3dp"
                android:background="@android:color/transparent"
                android:src="@drawable/c4" />

            <TextView
                android:id="@+id/text3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:text="unlink"
                android:textColor="#fff"
                android:textSize="16sp" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/new_lay4e"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginTop="3dp"
            android:layout_weight="1"
            android:background="@drawable/bgs" >

            <ImageButton
                android:id="@+id/expand_bttn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@+id/text4"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="3dp"
                android:background="@android:color/transparent"
                android:src="@drawable/i5" />

            <TextView
                android:id="@+id/text4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:text="expand"
                android:textColor="#fff"
                android:textSize="16sp" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/new_lay5"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginTop="3dp"
            android:layout_weight="1"
            android:background="@drawable/bgs" >

            <ImageButton
                android:id="@+id/send_bttn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@+id/text5"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="3dp"
                android:background="@android:color/transparent"
                android:src="@drawable/send_refined" />

            <TextView
                android:id="@+id/text5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:text="send"
                android:textColor="#fff"
                android:textSize="16sp" />
        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/board"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="1dp"
        android:background="#fff"
        android:orientation="vertical" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_marginLeft="3dp"
            android:layout_marginRight="3dp"
            android:layout_marginTop="3dp"
            android:background="@drawable/backg" >

            <ImageView
                android:id="@+id/imported_img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="3dp"
                android:layout_marginTop="3dp"
                android:src="@drawable/ic_launcher"
                android:visibility="visible" />
        </RelativeLayout>

        <LinearLayout
            android:id="@+id/hidden_view"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:visibility="gone" >

            <com.dng.gruupy.CurlView
                android:id="@+id/curl"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent" />
        </LinearLayout>
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/preview_lay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="-42dp"
        android:background="@android:color/transparent"
        android:gravity="right" >

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_below="@+id/preview_bttn"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginTop="8dp"
            android:background="#D3D3D3" />

        <ImageView
            android:id="@+id/preview_bttn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="2dp"
            android:paddingTop="12dp"
            android:scaleType="centerCrop"
            android:src="@drawable/navigicon" />

        <TextView
            android:id="@+id/index_numbering"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginBottom="8dp"
            android:layout_marginRight="4dp"
            android:layout_toLeftOf="@+id/preview_bttn"
            android:paddingTop="10dp"
            android:text="1.1"
            android:textSize="15sp"
            android:textStyle="bold"
            android:visibility="visible" />

        <TextView
            android:id="@+id/indicator"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/index_numbering"
            android:layout_alignParentLeft="true"
            android:layout_marginBottom="-5dp"
            android:layout_marginLeft="1dp"
            android:layout_marginTop="5dp"
            android:gravity="bottom"
            android:paddingTop="6dp"
            android:text="Preview Mode"
            android:textColor="#808615"
            android:textSize="15sp"
            android:visibility="gone" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/one_child"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <LinearLayout
            android:id="@+id/sec_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentBottom="true"
            android:orientation="vertical"
            android:visibility="visible" >

            <Button
                android:id="@+id/upload_bttn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="Upload"
                android:textColor="#fff"
                android:visibility="gone" />

            <RelativeLayout
                android:id="@+id/questions"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="bottom" >

                <ListView
                    android:id="@+id/questionaire"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_above="@+id/llar"
                    android:divider="@null"
                    android:visibility="visible" >
                </ListView>

                <RelativeLayout
                    android:id="@+id/llar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_toRightOf="@+id/linked_index"
                    android:background="#fff" >

                    <ImageView
                        android:id="@+id/plus_bttn"
                        android:layout_width="28dip"
                        android:layout_height="28dip"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="10dip"
                        android:src="@drawable/b"
                        android:visibility="visible" />

                    <EditText
                        android:id="@+id/comments1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:layout_toLeftOf="@+id/attach_btn"
                        android:layout_toRightOf="@+id/plus_bttn"
                        android:hint="Post Comments"
                        android:imeOptions="actionSend"
                        android:paddingTop="12dp"
                        android:textSize="18sp" />

                    <ImageView
                        android:id="@+id/attach_btn"
                        android:layout_width="28dip"
                        android:layout_height="28dip"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="14dip"
                        android:layout_toLeftOf="@+id/send_play"
                        android:src="@drawable/a"
                        android:visibility="visible" />

                    <ImageView
                        android:id="@+id/send_play"
                        android:layout_width="28dip"
                        android:layout_height="28dip"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="8dip"
                        android:background="@android:color/transparent"
                        android:src="@drawable/c"
                        android:visibility="visible" />
                </RelativeLayout>
            </RelativeLayout>
        </LinearLayout>
    </RelativeLayout>

</LinearLayout>