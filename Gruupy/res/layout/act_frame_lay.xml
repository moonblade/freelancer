<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <RelativeLayout
                android:id="@+id/frst"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >

                <Button
                    android:id="@+id/ChoosePictureButton"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="Choose Picture" />

                <ImageView
                    android:id="@+id/ChosenImageView"
                    android:layout_width="match_parent"
                    android:layout_height="200dp" >
                </ImageView>

                <ImageView
                    android:id="@+id/AlteredImageView"
                    android:layout_width="match_parent"
                    android:layout_height="100dp" >
                </ImageView>
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/relativeLayout1"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_alignParentBottom="true" >

                <LinearLayout
                    android:id="@+id/sec_view"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_alignParentBottom="true"
                    android:orientation="vertical"
                    android:visibility="visible" >

                    <Button
                        android:id="@+id/upload_bttn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:text="Upload"
                        android:textColor="#fff"
                        android:visibility="gone" />

                    <TextView
                        android:id="@+id/comments"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:text="Post Comments"
                        android:textColor="#000"
                        android:textSize="20sp"
                        android:textStyle="bold" />

                    <RelativeLayout
                        android:id="@+id/questions"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="bottom"
                        android:background="#ebebeb" >

                        <ListView
                            android:id="@+id/questionaire"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_above="@+id/llar"
                            android:divider="@null"
                            android:visibility="visible" >
                        </ListView>

                        <RelativeLayout
                            android:id="@+id/llar"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_alignParentBottom="true"
                            android:layout_toRightOf="@+id/linked_index" >

                            <EditText
                                android:id="@+id/comments1"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_margin="5dp"
                                android:layout_marginLeft="5dp"
                                android:layout_marginRight="5dp"
                                android:paddingTop="12dp"
                                android:textSize="18sp" />

                            <LinearLayout
                                android:id="@+id/controls2"
                                android:layout_width="match_parent"
                                android:layout_height="52dp"
                                android:layout_below="@+id/comments1"
                                android:background="#fff"
                                android:orientation="horizontal"
                                android:visibility="visible"
                                android:weightSum="5.0" >

                                <RelativeLayout
                                    android:id="@+id/new_lay2"
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_marginTop="3dp"
                                    android:layout_weight="1"
                                    android:background="@drawable/bgs" >

                                    <ImageButton
                                        android:id="@+id/linked_bttn"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_above="@+id/unlink_text"
                                        android:layout_alignParentTop="true"
                                        android:layout_centerHorizontal="true"
                                        android:layout_marginTop="5dp"
                                        android:background="@android:color/transparent"
                                        android:src="@drawable/c4" />

                                    <TextView
                                        android:id="@+id/unlink_text"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_alignParentBottom="true"
                                        android:layout_centerHorizontal="true"
                                        android:text="unlink"
                                        android:textColor="#fff"
                                        android:textSize="16sp" />
                                </RelativeLayout>

                                <RelativeLayout
                                    android:id="@+id/new_lay21"
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_marginTop="3dp"
                                    android:layout_weight="1"
                                    android:background="@drawable/bgs" >

                                    <ImageButton
                                        android:id="@+id/new_bttn21"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_above="@+id/attch_text"
                                        android:layout_alignParentTop="true"
                                        android:layout_centerHorizontal="true"
                                        android:layout_marginTop="1dp"
                                        android:background="@android:color/transparent"
                                        android:src="@drawable/attach1" />

                                    <TextView
                                        android:id="@+id/attch_text"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_alignParentBottom="true"
                                        android:layout_centerHorizontal="true"
                                        android:text="attach"
                                        android:textColor="#fff"
                                        android:textSize="16sp" />
                                </RelativeLayout>

                                <RelativeLayout
                                    android:id="@+id/new_lay31"
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_marginTop="3dp"
                                    android:layout_weight="1"
                                    android:background="@drawable/bgs" >

                                    <ImageButton
                                        android:id="@+id/clear_bttn"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_above="@+id/listen_text"
                                        android:layout_alignParentTop="true"
                                        android:layout_centerHorizontal="true"
                                        android:layout_marginTop="2dp"
                                        android:background="@android:color/transparent"
                                        android:padding="1dp"
                                        android:src="@drawable/listen1" />

                                    <TextView
                                        android:id="@+id/listen_text"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_alignParentBottom="true"
                                        android:layout_centerHorizontal="true"
                                        android:text="listen"
                                        android:textColor="#fff"
                                        android:textSize="16sp" />
                                </RelativeLayout>

                                <RelativeLayout
                                    android:id="@+id/new_lay42"
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_marginTop="3dp"
                                    android:layout_weight="1"
                                    android:background="@drawable/bgs" >

                                    <ImageButton
                                        android:id="@+id/linked_bttn"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_above="@+id/send_text"
                                        android:layout_alignParentTop="true"
                                        android:layout_centerHorizontal="true"
                                        android:layout_marginTop="1dp"
                                        android:background="@android:color/transparent"
                                        android:src="@drawable/sendv" />

                                    <TextView
                                        android:id="@+id/send_text"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_alignParentBottom="true"
                                        android:layout_centerHorizontal="true"
                                        android:text="send"
                                        android:textColor="#fff"
                                        android:textSize="16sp" />
                                </RelativeLayout>

                                <RelativeLayout
                                    android:id="@+id/new_lay52"
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_marginTop="3dp"
                                    android:layout_weight="1"
                                    android:background="@drawable/bgs" >

                                    <ImageButton
                                        android:id="@+id/post_note"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_above="@+id/send_text"
                                        android:layout_alignParentTop="true"
                                        android:layout_centerHorizontal="true"
                                        android:layout_marginTop="3dp"
                                        android:background="@android:color/transparent"
                                        android:src="@drawable/send_refined" />

                                    <TextView
                                        android:id="@+id/send_text"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_alignParentBottom="true"
                                        android:layout_centerHorizontal="true"
                                        android:text="send"
                                        android:textColor="#fff"
                                        android:textSize="16sp" />
                                </RelativeLayout>
                            </LinearLayout>
                        </RelativeLayout>
                    </RelativeLayout>
                </LinearLayout>
            </RelativeLayout>
        </RelativeLayout>
    </RelativeLayout>

</FrameLayout>