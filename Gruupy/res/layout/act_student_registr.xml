<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/RelativeLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <RelativeLayout
        android:id="@+id/act_bar"
        android:layout_width="match_parent"
        android:layout_height="51dp"
        android:layout_marginBottom="-4dp"
        android:background="#fff" >

        <ImageView
            android:id="@+id/logo_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginBottom="3dp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="3dp"
            android:background="@drawable/tlogo" />

        <TextView
            android:id="@+id/group_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginTop="6dp"
            android:layout_toRightOf="@+id/logo_icon"
            android:text="@string/app_name"
            android:textColor="#000"
            android:textSize="18sp" />

        <ImageView
            android:id="@+id/btn_options"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="5dp"
            android:background="@drawable/option" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/group_title"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="4dp"
            android:layout_marginTop="10dp"
            android:background="@android:color/darker_gray" />
    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/act_bar" >

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

            <RelativeLayout
                android:id="@+id/basic_profile"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >

                <RelativeLayout
                    android:id="@+id/h1"
                    android:layout_width="match_parent"
                    android:layout_height="40dp" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="12dp"
                        android:text="Image"
                        android:textColor="#000"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1.0dp"
                        android:layout_alignParentBottom="true"
                        android:layout_marginLeft="12dp"
                        android:layout_marginRight="12dp"
                        android:background="@android:color/darker_gray" >
                    </View>
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/image"
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:layout_below="@+id/h1"
                    android:layout_marginTop="5dp" >

                    <ImageView
                        android:id="@+id/uimageView1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true"
                        android:src="@drawable/female" />
                </RelativeLayout>

                <View
                    android:id="@+id/vv1"
                    android:layout_width="match_parent"
                    android:layout_height="1.0dp"
                    android:layout_below="@+id/image"
                    android:layout_marginLeft="12dp"
                    android:layout_marginRight="12dp"
                    android:background="@android:color/darker_gray" >
                </View>

                <RelativeLayout
                    android:id="@+id/r1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/vv1"
                    android:layout_marginTop="5dp"
                    android:gravity="center_horizontal" >

                    <RelativeLayout
                        android:id="@+id/h1"
                        android:layout_width="match_parent"
                        android:layout_height="40dp" >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="12dp"
                            android:text="Details"
                            android:textColor="#000"
                            android:textSize="18sp"
                            android:textStyle="bold" />
                    </RelativeLayout>

                    <EditText
                        android:id="@+id/user_name1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/h1"
                        android:layout_marginLeft="12dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginTop="10dp"
                        android:ems="10"
                        android:gravity="center_horizontal"
                        android:hint="Full Name" />

                    <!--
                 <EditText
                android:id="@+id/user_name2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/user_name1"
                android:layout_marginRight="2dp"
                android:layout_marginTop="5dp"
                android:background="#fff"
                android:ems="10"
                android:hint="Last name"
                android:paddingLeft="3dp" />
                    -->

                    <EditText
                        android:id="@+id/email1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/user_name1"
                        android:layout_marginLeft="12dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginTop="10dp"
                        android:ems="10"
                        android:gravity="center_horizontal"
                        android:hint="Email Address" >
                    </EditText>

                    <EditText
                        android:id="@+id/institute"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/email1"
                        android:layout_marginLeft="12dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginTop="10dp"
                        android:ems="10"
                        android:gravity="center_horizontal"
                        android:hint="Institution" />

                    <EditText
                        android:id="@+id/grade"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/institute"
                        android:layout_marginLeft="12dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginTop="10dp"
                        android:ems="10"
                        android:gravity="center_horizontal"
                        android:hint="Grade"
                        android:inputType="number"
                        android:maxLength="3" />

                    <EditText
                        android:id="@+id/locator"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/grade"
                        android:layout_marginLeft="12dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginTop="10dp"
                        android:ems="10"
                        android:gravity="center_horizontal"
                        android:hint="Loading location..."
                        android:visibility="gone" />
                </RelativeLayout>
            </RelativeLayout>

            <!--
         <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="5" />
            -->

            <View
                android:id="@+id/vv2"
                android:layout_width="match_parent"
                android:layout_height="1.0dp"
                android:layout_below="@+id/basic_profile"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="12dp"
                android:layout_marginTop="10dp"
                android:background="@android:color/darker_gray" >
            </View>

            <RelativeLayout
                android:id="@+id/lay1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/vv2" >

                <RelativeLayout
                    android:id="@+id/h3"
                    android:layout_width="match_parent"
                    android:layout_height="40dp" >

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="12dp"
                        android:text="Login"
                        android:textColor="#000"
                        android:textSize="18sp"
                        android:textStyle="bold" />
                </RelativeLayout>

                <EditText
                    android:id="@+id/s_username"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/h3"
                    android:layout_marginLeft="12dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="10dp"
                    android:ems="10"
                    android:gravity="center_horizontal"
                    android:hint="Username" >
                </EditText>

                <EditText
                    android:id="@+id/s_password"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/s_username"
                    android:layout_marginLeft="12dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="10dp"
                    android:ems="10"
                    android:gravity="center_horizontal"
                    android:hint="Password"
                    android:inputType="textPassword"
                    android:maxLength="15" >
                </EditText>

                <EditText
                    android:id="@+id/c_password"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/s_password"
                    android:layout_marginLeft="12dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="10dp"
                    android:ems="10"
                    android:gravity="center_horizontal"
                    android:hint="Confirm password"
                    android:inputType="textPassword"
                    android:maxLength="15" >
                </EditText>
            </RelativeLayout>

            <LinearLayout
                android:id="@+id/buttons_ctrl"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/lay1"
                android:layout_marginTop="20dp"
                android:orientation="horizontal"
                android:weightSum="4" >

                <View
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.8" >
                </View>

                <Button
                    android:id="@+id/back_btn"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:layout_marginBottom="4dp"
                    android:layout_weight="1"
                    android:background="@drawable/grey_bg"
                    android:text="Back"
                    android:visibility="invisible" />

                <View
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.4" >
                </View>

                <View
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.3" >
                </View>

                <Button
                    android:id="@+id/next_btn"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="right"
                    android:layout_marginBottom="4dp"
                    android:layout_marginRight="15dp"
                    android:layout_weight="0.5"
                    android:background="@android:color/transparent"
                    android:gravity="right|center_vertical"
                    android:text="Done"
                    android:textSize="18sp"
                    android:textStyle="bold" />
            </LinearLayout>
        </RelativeLayout>
    </ScrollView>

</RelativeLayout>