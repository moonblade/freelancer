<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >

    <LinearLayout
        android:id="@+id/main_layout"
        android:layout_width="match_parent"
        android:layout_height="166dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:weightSum="5" >

        <RelativeLayout
            android:id="@+id/img_channel"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.5" >

            <TextView
                android:id="@+id/t1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="7dp"
                android:text="CHANNEL"
                android:textColor="#400000"
                android:textSize="20sp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/img_group"
                android:layout_width="85dp"
                android:layout_height="85dp"
                android:layout_below="@+id/t1"
                android:layout_marginBottom="4dp"
                android:layout_centerHorizontal="true"
                android:layout_margin="1dp"
                android:background="#80ffffff"
                android:src="@drawable/tlogo" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="3dp"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/num1"
                    android:layout_width="26dp"
                    android:layout_height="26dp"
                    android:layout_gravity="top"
                    android:layout_marginBottom="15dp"
                    android:background="#400000"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:gravity="center_horizontal|center_vertical"
                    android:text="1"
                    android:textColor="#fff"
                    android:textSize="20sp"/>

                <TextView
                    android:id="@+id/num2"
                    android:layout_width="26dp"
                    android:layout_height="26dp"
                    android:layout_below="@+id/img_group"
                    android:layout_gravity="top"
                    android:layout_marginBottom="15dp"
                    android:layout_marginLeft="3dp"
                    android:background="#400000"
                    android:gravity="center_horizontal|center_vertical"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:text="0"
                    android:textColor="#fff"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/num3"
                    android:layout_width="26dp"
                    android:layout_height="26dp"
                    android:layout_below="@+id/img_group"
                    android:layout_gravity="top"
                    android:layout_marginBottom="15dp"
                    android:layout_marginLeft="3dp"
                    android:gravity="center_horizontal|center_vertical"
                    android:background="#400000"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:text="0"
                    android:textColor="#fff"
                    android:textSize="20sp" />
            </LinearLayout>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/details"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3.5"
            android:gravity="top" >

            <TextView
                android:id="@+id/creator1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="7dp"
                android:layout_toRightOf="@+id/img_channel"
                android:text="Saleam"
                android:textColor="#400000"
                android:textSize="20sp"
                android:textStyle="bold"
                 />

            <TextView
                android:id="@+id/text_name1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/creator1"
                android:text="TextView"
                android:textColor="@android:color/darker_gray"
                android:textSize="16sp"
                android:layout_alignLeft="@id/creator1"
                 />

            <TextView
                android:id="@+id/text_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/text_name1"
                android:layout_toRightOf="@+id/img_channel"
                android:text="Now"
                android:textColor="@android:color/darker_gray"
                android:textSize="16sp"
                android:layout_alignLeft="@id/text_name1"
                 />

            <TextView
                android:id="@+id/upcoming"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/text_status"
                android:layout_toRightOf="@+id/img_channel"
                android:text="Next - Geometry 15Apr"
                android:textColor="@android:color/darker_gray"
                android:textSize="16sp"
                android:layout_alignLeft="@id/text_name1" />

            <TextView
                android:id="@+id/time_rem"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/upcoming"
                android:layout_toRightOf="@+id/img_channel"
                android:text="Time - 15H30 "
                android:textColor="@android:color/darker_gray"
                android:textSize="16sp"
                android:layout_alignLeft="@id/text_name1" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_marginBottom="8dp"
                android:layout_below="@+id/time_rem"
                android:layout_alignLeft="@id/details"
                 >

                <TextView
                    android:id="@+id/like_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="4dp"
                    android:text="256"
                    android:textColor="#F78224"
                    android:textSize="15sp" 
                    android:layout_alignLeft="@id/details"
                    />

                <ImageView
                    android:id="@+id/llike"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:layout_toRightOf="@+id/like_count"
                    android:padding="2dp"
                    android:paddingBottom="4dp"
                    android:src="@drawable/like111" />
            </RelativeLayout>
        </RelativeLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1.5dp"
        android:layout_below="@+id/main_layout"
        android:layout_marginLeft="6dp"
        android:layout_marginRight="6dp"
        android:background="#D3D3D3" />

</RelativeLayout>