<resources>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="Theme.AppCompat.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>
 <style name="commonBackground">
        <item name="android:background">@drawable/window_background_style</item>
    </style>

    <!-- set number layout styles -->
    <style name="setNumberHeading1">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_marginBottom">10dp</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="setNumberHeading2">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:layout_marginBottom">5dp</item>
        <item name="android:textColor">#8c8c8c</item>
        <item name="android:textSize">14sp</item>
        <item name="android:gravity">center_horizontal</item>
    </style>

    <style name="buttonStyle">
        <item name="android:background">@drawable/button_background_style</item>
        <item name="android:layout_width">50dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:gravity">center_vertical|center_horizontal|top|fill_vertical</item>
        <item name="android:minHeight">30dp</item>
        <item name="android:textSize">12dp</item>
    </style>

    <style name="setNumberEditText">
        <item name="android:background">@drawable/edittext_background_style</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">44dp</item>
        <item name="android:layout_weight">3</item>
        <item name="android:digits">0123456789</item>
        <item name="android:inputType">number</item>
        <item name="android:maxLength">15</item>
        <item name="android:paddingBottom">0dp</item>
        <item name="android:paddingLeft">8dp</item>
        <item name="android:paddingTop">0dp</item>
        <item name="android:singleLine">true</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="dialingCodeStyle" parent="setNumberEditText">
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center</item>
        <item name="android:inputType">phone</item>
        <item name="android:maxLength">5</item>
    </style>
   
     <style name="setNumberCountryIcon">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">30dp</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:layout_margin">1dp</item>
        <item name="android:layout_weight">1</item>
    </style>

    <style name="nombrePais">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">30dp</item>
        <item name="android:layout_weight">2.25</item>
        <item name="android:gravity">bottom|fill_vertical</item>
        <item name="android:text">@string/search_hint</item>
        <item name="android:textAppearance">?android:attr/textAppearanceMedium</item>
    </style>

    <style name="arrowBtt">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">30dp</item>
        <item name="android:layout_weight">0.20</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:background">@null</item>
    </style>
    
	<!-- country item style -->
    <style name="countryNameItem">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">2</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">#000000</item>
    </style>

    <style name="countryDialingCodeItem" parent="countryNameItem">
        <item name="android:gravity">right</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:textColor">#666666</item>
    </style>

    <style name="countryIcon">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_margin">6dp</item>
        <item name="android:layout_gravity">center_vertical</item>
        
        <item name="android:scaleType">fitCenter</item>
    </style>

    <style name="countryCheck">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_margin">10dp</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:scaleType">fitCenter</item>
    </style>   

    <!-- activity code style -->
    <style name="codeNumber">
        <item name="android:layout_width">40dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerInParent">true</item>
        <item name="android:layout_gravity">center_vertical|center_horizontal</item>
        <item name="android:inputType">number</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:maxLength">1</item>
        <item name="android:background">@drawable/edittext_background_style</item>
        <item name="android:paddingBottom">6dp</item>
        <item name="android:paddingTop">6dp</item>
    </style>
    
    <style name="codeActivityHeading1">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">10dp</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:textColor">#333333</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>        
    </style>
    
    <style name="backArrowBtt">
        <item name="android:layout_width">25dp</item>
        <item name="android:layout_height">20dp</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:adjustViewBounds">false</item>
        <item name="android:background">@null</item>
        <item name="android:layout_marginLeft">16px</item>
        <item name="android:scaleType">fitStart</item>
        <item name="android:src">@drawable/back_arrow</item>
    </style>
    
    <style name="callmebtt">
        <item name="android:background">@drawable/button_background_style</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center_vertical|center_horizontal|top|fill_vertical</item>
        <item name="android:textSize">16dp</item>        
        <item name="android:padding">8dp</item>
    </style>
    
    <style name="progressBar">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">3dp</item>             
        <item name="android:layout_alignParentLeft">true</item>
        <item name="android:indeterminate">false</item>
        <item name="android:indeterminateOnly">false</item>
        <item name="android:max">5</item>
        <item name="android:progress">0</item>
        <item name="android:progressDrawable">@drawable/progressbar_style</item>        
    </style>
    
    <style name="sentto" parent="setNumberHeading2">
        <item name="android:textColor">#000000</item>
    </style>
</resources>
